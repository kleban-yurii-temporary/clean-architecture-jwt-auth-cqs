@page "/"
@using EduTrack.WebUI.Client.Shared.PlainAdmin;

@layout PlainAdminLayout

@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PlainAdminPageTitle Title="Вхід у систему"></PlainAdminPageTitle>

<SfMessage Severity="MessageSeverity.Info">Перенаправлення на сторінку користувача...</SfMessage>


@code {

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthStateProvider.GetAuthenticationStateAsync();

        if(!state.User.Identity.IsAuthenticated)
        {
            Navigation.NavigateTo("/login");
        }

        if(state.User.IsInRole("teacher"))
        {
            Console.WriteLine("teacher");
            Navigation.NavigateTo("/teacher");
        }

        if (state.User.IsInRole("student"))
        {
            Console.WriteLine("std");
            Navigation.NavigateTo("/student");
        }
    }
}
